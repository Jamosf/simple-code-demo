<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lewisen.goodnight.view.ShakeRandomFragment">


    <ImageView
        android:id="@+id/shake_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@mipmap/shake" />

    <TextView
        android:id="@+id/shake_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shake_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="摇一摇，看往期精彩内容"
        android:textColor="@color/text_second_day"
        android:textSize="@dimen/text_size" />


</RelativeLayout>
