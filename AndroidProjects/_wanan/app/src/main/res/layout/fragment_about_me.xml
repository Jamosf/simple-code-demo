<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_day" >

    <ImageView
        android:id="@+id/goodnight"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic" />

    <TextView
        android:id="@+id/about1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goodnight"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="@string/about1"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/text_second_day"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/about2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about1"
        android:layout_centerHorizontal="true"
        android:text="分享生活，体味生活"
        android:textColor="@color/text_second_day"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="投稿：wananapp@163.com"
        android:textColor="@color/text_second_day"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mail"
        android:layout_below="@id/mail"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="QQ：1522953457"
        android:textColor="@color/text_second_day"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/about3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/about_me"
        android:textColor="@color/text_second_day"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/about4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/about3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="@color/text_second_day"
        android:text="iShareriin 工作室"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/about5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/about3"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:text="版本：3.1"
        android:textColor="@color/text_second_day"
        android:textSize="13sp" />

</RelativeLayout>